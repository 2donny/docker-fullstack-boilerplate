{
  "AWSEBDockerrunVersion": 2,
  "containerDefinitions": [
    {
      "name": "backend",
      "image": "2donny/docker-backend",
      "host": "frontend",
      "essential": false,
      "memory": 128
    },
    {
      "name": "nginx",
      "image": "2donny/docker-nginx",
      "host": "nginx",
      "essential": true,
      "portMappings": [
        {
          "hostPort": 80,
          "containerPort": 80
        }
      ],
      "links": ["backend"],
      "memory": 128
    },
    {
      "name": "db",
      "image": "postgres",
      "host": "db",
      "essential": true,
      "memory": 256
    }
  ]
}
